{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://fiks.ks.no/bekymringsmelding.privat.v1.json",
  "title": "Privat bekymringsmelding",
  "type": "object",
  "required": [
    "kommunenummer",
    "kommunenavn",
    "bydelsnummer",
    "bydelsnavn",
    "privatMelder",
    "privatBarn",
    "melding"
  ],
  "properties": {
    "kommunenummer": {
      "type": "string",
      "pattern": "^\\d{4}$"
    },
    "kommunenavn": {
      "type": "string",
      "pattern": "^(.*)$"
    },
    "bydelsnummer": {
      "type": "string",
      "pattern": "^[0-9]{2}$"
    },
    "bydelsnavn": {
      "type": "string",
      "pattern": "^(.*)$"
    },
    "privatMelder": {
      "type": "object",
      "required": [
        "fnr",
        "personnavn",
        "skjultIdentitet"
      ],
      "properties": {
        "fnr": {
          "type": "string",
          "pattern": "^[0-9]{11}$"
        },
        "personnavn": {
          "type": "string",
          "pattern": "^(.*)$"
        },
        "telefonnummer": {
          "type": "string",
          "pattern": "^[+]?[0-9]+([- ][0-9]+)*$"
        },
        "skjultIdentitet": {
          "type": "boolean"
        },
        "adresse": {
          "$ref": "./adresse.json"
        }
      }
    },
    "privatBarn": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "personnavn",
          "adresse"
        ],
        "properties": {
          "personnavn": {
            "type": "string",
            "pattern": "^(.*)$"
          },
          "antattAlder": {
            "type": "string",
            "pattern": "^(.*)$"
          },
          "relasjon": {
            "type": "string",
            "pattern": "^(.*)$"
          },
          "adresse": {
            "$ref": "./adresse.json"
          }
        }
      }
    },
    "melding": {
      "type": "string",
      "pattern": "^(.*)$"
    }
  }
}